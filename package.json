{
    "name": "refract",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "init": "npm run prebuild",
        "prepare": "npm run prebuild",
        "copy": "node ./scripts/copy",
        "generatePackages": "node ./scripts/generatePkg",
        "prebuild": "npm run generatePackages && npm run copy",
        "build": "rollup -c rollup.config.js",
        "postbuild": "prettier --write 'packages/*/types/*.ts'",
        "pretest": "npm run copy",
        "test:react": "jest --config base/__tests__/react/jest.config.js",
        "test:preact": "jest --config base/__tests__/preact/jest.config.js",
        "test:redux": "jest --config base/__tests__/redux/jest.config.js",
        "test":
            "npm run test:react && npm run test:preact && npm run test:redux",
        "precommit": "lint-staged",
        "prerelease": "npm run build",
        "release": "node ./scripts/publish"
    },
    "devDependencies": {
        "@types/enzyme": "~3.1.10",
        "@types/jest": "~22.2.3",
        "@types/react": "~16.3.14",
        "callbag": "~1.1.0",
        "callbag-basics": "~3.0.0",
        "callbag-drop-repeats": "~1.0.0",
        "callbag-from-obs": "~1.2.0",
        "callbag-map": "~1.0.1",
        "callbag-pipe": "~1.1.1",
        "callbag-start-with": "~2.1.1",
        "callbag-to-obs": "~1.0.0",
        "checksum": "~0.1.1",
        "del": "~3.0.0",
        "enzyme": "~3.3.0",
        "enzyme-adapter-preact": "~0.2.0",
        "enzyme-adapter-react-16": "~1.1.1",
        "husky": "~0.14.3",
        "inquirer": "~6.1.0",
        "jest": "~22.4.3",
        "lint-staged": "~7.0.5",
        "most": "~1.7.3",
        "node-fetch": "~2.2.0",
        "ora": "~3.0.0",
        "preact": "~8.3.0",
        "prettier": "~1.12.1",
        "react": "~16.3.2",
        "react-dom": "~16.3.2",
        "redux": "~4.0.0",
        "rollup": "~0.58.2",
        "rollup-plugin-typescript2": "~0.15.1",
        "rxjs": "~6.1.0",
        "rxjs-compat": "~6.1.0",
        "symbol-observable": "~1.2.0",
        "ts-jest": "~22.4.5",
        "tslint": "~5.10.0",
        "tslint-config-prettier": "~1.12.0",
        "typescript": "~2.8.3",
        "xstream": "~11.2.0"
    },
    "lint-staged": {
        "*.{ts,tsx}": ["prettier --write", "tslint", "git add"],
        "*.{js,json,md}": ["prettier --write", "git add"]
    }
}
