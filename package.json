{
    "name": "refract",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "init": "lerna bootstrap",
        "copy": "node ./scripts/copy",
        "prebuild": "npm run copy",
        "build": "rollup -c rollup.config.js",
        "postbuild": "prettier --write 'packages/*/types/*.ts'",
        "test": "jest",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@types/enzyme": "~3.1.10",
        "@types/jest": "~22.2.3",
        "@types/react": "~16.3.14",
        "callbag-basics": "~3.0.0",
        "callbag-from-obs": "~1.2.0",
        "callbag-to-obs": "~1.0.0",
        "enzyme": "~3.3.0",
        "enzyme-adapter-react-16": "~1.1.1",
        "husky": "~0.14.3",
        "jest": "~22.4.3",
        "lerna": "^2.9.0",
        "lint-staged": "~7.0.5",
        "most": "~1.7.3",
        "prettier": "~1.12.1",
        "react": "~16.3.2",
        "react-dom": "~16.3.2",
        "redux": "~4.0.0",
        "rollup": "~0.58.2",
        "rollup-plugin-typescript2": "~0.15.1",
        "rxjs": "~6.1.0",
        "rxjs-compat": "~6.1.0",
        "ts-jest": "~22.4.5",
        "tslint": "~5.10.0",
        "tslint-config-prettier": "~1.12.0",
        "typescript": "~2.8.3",
        "xstream": "~11.2.0"
    },
    "lint-staged": {
        "*.ts": ["prettier --write", "tslint", "git add"],
        "*.{js,json}": ["prettier --write", "git add"]
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "packages/.*/src/__tests__/index.ts$",
        "moduleFileExtensions": ["ts", "js"],
        "setupFiles": ["<rootDir>/test.config.js"],
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.test.json"
            }
        }
    }
}
